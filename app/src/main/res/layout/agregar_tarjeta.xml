<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical" >

    <Button
        android:id="@+id/backButton"
        android:layout_width="155dp"
        android:layout_height="38dp"
        android:text="Regresar"
        app:icon="@drawable/back_arrow" />

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/agregar_tarjeta"
            android:layout_width="match_parent"
            android:layout_height="261dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/bordes_all_shape"
            android:orientation="vertical">


            <Spinner
                android:id="@+id/input_card_bank"
                android:layout_width="match_parent"
                android:hint="Banco"
                android:spinnerMode="dialog"
                android:layout_height="wrap_content" />


            <EditText
                android:id="@+id/input_card_alias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Alias de la Tarjeta"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/input_card_expire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:hint="@string/fecha_vencimiento"
                android:inputType="date"
                android:maxLines="1" />

            <EditText
                android:id="@+id/input_card_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Limite de la Tarjeta"
                android:inputType="number" />

            <Button
                android:id="@+id/accountAddCard"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:text="Agregar" />


        </LinearLayout>





    </LinearLayout>
</ScrollView>

</LinearLayout>